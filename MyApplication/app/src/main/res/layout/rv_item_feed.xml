<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_item_feed_container"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ly_item"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding = "10dp"
                android:src="@drawable/ic_instagram"
                android:id="@+id/rv_item_feed_src">
            </ImageView>

            <TextView
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/rv_item_feed_src"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="피드제목피드제목"
                android:textStyle="bold"
                android:id="@+id/rv_item_feed_title"
                android:textColor="@color/darkGrayD"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="15dp">

            </TextView>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/rv_item_feed_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/rv_item_hashtag_container"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:id="@+id/rv_item_feed_hashtag1"
                android:background="@drawable/shape_graybtn_16dp"
                android:includeFontPadding = "false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="10dp"
                android:textColor="@color/grayA"
                android:textStyle="bold" />

            <TextView
                android:visibility="gone"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:id="@+id/rv_item_feed_hashtag2"
                android:background="@drawable/shape_graybtn_16dp"
                android:includeFontPadding = "false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginLeft="7dp"
                android:textColor="@color/grayA"
                android:textStyle="bold" />
            <TextView
                android:visibility="gone"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:id="@+id/rv_item_feed_hashtag3"
                android:background="@drawable/shape_graybtn_16dp"
                android:includeFontPadding = "false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginLeft="7dp"
                android:textColor="@color/grayA"
                android:textStyle="bold" />
            <TextView
                android:visibility="gone"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:id="@+id/rv_item_feed_hashtag4"
                android:background="@drawable/shape_graybtn_16dp"
                android:includeFontPadding = "false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginLeft="7dp"
                android:textColor="@color/grayA"
                android:textStyle="bold" />
            <TextView
                android:visibility="gone"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center"
                android:id="@+id/rv_item_feed_hashtag5"
                android:background="@drawable/shape_graybtn_16dp"
                android:includeFontPadding = "false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="10dp"
                android:layout_marginLeft="7dp"
                android:textColor="@color/grayA"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginVertical="5dp"
                android:id="@+id/rv_item_hashtag_container_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

<!--        <View-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="2px"-->
<!--            android:background="@drawable/shape_bottom_line_gray">-->
<!--        </View>-->



    </LinearLayout>


</RelativeLayout>