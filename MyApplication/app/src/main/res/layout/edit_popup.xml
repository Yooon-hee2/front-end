<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <TextView
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:letterSpacing="0.01"
        android:text="title"
        android:textColor="@color/darkGrayD"
        android:textSize="12sp" />

    <EditText
        android:maxLines="10"
        android:id="@+id/et_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_bottom_line_gray"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="제목을 입력해주세요"
        android:textColorHint="@color/black"
        android:inputType="textMultiLine|textCapSentences"
        android:maxWidth="200dp"
        android:maxLength="200"
        android:singleLine="false"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hashtag"
        android:textColor="@color/darkGrayD"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edt_add_hashtag"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_bottom_line_gray"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/black"
            android:hint="해시태그를 입력해주세요"
            android:inputType="textMultiLine|textCapSentences"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="5dp"
            android:id="@+id/btn_add"
            android:src="@drawable/ic_plus"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginVertical="3dp"
        android:id="@+id/hashtag_container"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_hashtag_container_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hashtag_container2"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hashtag_container3"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hashtag_container4"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/hashtag_container5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_gravity="left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="folder"
        android:textColor="@color/darkGrayD"
        android:textSize="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/black"
            android:text="전체"
            android:id="@+id/folder_name_modify"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp">

        </TextView>

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_down"
            android:layout_centerVertical="true"
            android:id="@+id/folder_menu"
            android:layout_width="15dp"
            android:layout_height="15dp">
        </ImageView>
    </LinearLayout>

    <TextView
        android:id="@+id/btn_add_folder_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginVertical="5dp"
        android:includeFontPadding="false"
        android:text="+ 폴더 추가"
        android:textColor="@color/darkGrayC"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/btn_submit_edit"
        android:layout_width="77dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_btn_red"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingVertical="10dp"
        android:text="저장"
        android:textColor="@color/white"
        android:textSize="10dp" />

</LinearLayout>