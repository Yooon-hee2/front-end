<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.FolderManageActivity"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_with_onlyback">
    </include>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_folder_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/btn_add_folder_container"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_plus">
        </ImageView>

        <TextView
            android:id="@+id/btn_add_folder"
            android:layout_marginLeft="30dp"
            android:includeFontPadding = "false"
            android:paddingRight="12dp"
            android:paddingVertical="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/darkGrayC"
            android:text="폴더 추가"
            />

    </RelativeLayout>
</LinearLayout>