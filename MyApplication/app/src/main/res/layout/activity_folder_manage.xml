<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.FolderManageActivity"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_with_onlyback">
    </include>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_my_storage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:paddingVertical="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="12dp"
                android:text="맛집"
                android:textColor="@color/darkGrayC"
                android:textSize="18sp" />

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_trashbin">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:includeFontPadding = "false"
                android:paddingRight="12dp"
                android:paddingVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="18sp"
                android:textColor="@color/darkGrayC"
                android:text="공연 정보"
                />

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_trashbin">
            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:includeFontPadding = "false"
                android:paddingRight="12dp"
                android:paddingVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="18sp"
                android:textColor="@color/darkGrayC"
                android:text="화장품"
                />

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_trashbin">

            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/folder_4th"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/folder_4th_txt"
                android:includeFontPadding = "false"
                android:paddingRight="12dp"
                android:paddingVertical="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:textSize="18sp"
                android:textColor="@color/darkGrayC"
                />

            <ImageView
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_trashbin">

            </ImageView>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_plus">
        </ImageView>

        <TextView
            android:id="@+id/btn_add_folder"
            android:layout_marginLeft="30dp"
            android:includeFontPadding = "false"
            android:paddingRight="12dp"
            android:paddingVertical="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:textColor="@color/darkGrayC"
            android:text="폴더 추가"
            />

    </RelativeLayout>
</LinearLayout>