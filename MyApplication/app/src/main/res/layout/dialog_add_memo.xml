<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@+id/dialog_memo"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:background="@drawable/radius"
    android:gravity="center_horizontal"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <TextView
        android:layout_gravity="left"
        android:layout_width="42dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:letterSpacing="0.01"
        android:text="memo"
        android:textColor="@color/darkGrayD"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/edt_memo"
        android:padding="5dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_border_gray"
        android:hint="추가하고싶은 메모를 마음껏 작성해보아요."
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="top|left"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="10"
        android:maxWidth="200dp"
        android:maxLength="200"
        android:maxLines="10"
        android:singleLine="false"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/btn_submit_memo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_btn_red"
        android:gravity="center"
        android:includeFontPadding="false"
        android:paddingVertical="10dp"
        android:text="메모 추가"
        android:textColor="@color/white"
        android:textSize="10dp" />
</LinearLayout>