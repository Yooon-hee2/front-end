<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:backgroundTint="@color/white"
    android:background="@drawable/radius"
    android:gravity="center_horizontal"
    android:paddingHorizontal="20dp">

    <ImageView
        android:layout_marginTop="25dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_folder"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:layout_marginTop="10dp"
        android:includeFontPadding = "false"
        android:paddingBottom="3.5dp"
        android:paddingTop="16dp"
        android:maxLines="1"
        android:maxLength="10"
        android:hint="ex)의정부 맛집"
        android:textSize="19sp"
        android:id="@+id/et_login_email"
        android:textColor="@color/darkGrayD"
        android:background="@drawable/shape_bottom_line_gray"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:includeFontPadding = "false"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_btn_red"
        android:layout_gravity="center"
        android:paddingVertical="15dp"
        android:text="폴더 생성"
        android:gravity="center"
        android:textColor="@color/white"
        android:letterSpacing="0.01"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:includeFontPadding = "false"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_btn_normal"
        android:layout_gravity="center"
        android:paddingVertical="15dp"
        android:text="취소"
        android:gravity="center"
        android:textColor="@color/darkGrayA"
        android:letterSpacing="0.01"
        android:layout_width="200dp"
        android:layout_height="wrap_content"/>
/>
</LinearLayout>