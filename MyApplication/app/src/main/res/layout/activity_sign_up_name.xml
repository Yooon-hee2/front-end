<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">
    <LinearLayout
        android:id="@+id/login_activity_layout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btn_signup_back"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="11dp"
            android:src="@drawable/ic_back"
            android:layout_width="27dp"
            android:layout_height="32dp"/>

        <LinearLayout
            android:layout_marginTop="44dp"
            android:paddingHorizontal="30dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:includeFontPadding = "false"
                android:text="닉네임을"
                android:textSize="24sp"
                android:layout_marginLeft="29dp"
                android:paddingTop="48dp"
                android:id="@+id/tv_signup_head"
                android:textColor="@color/darkGrayD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:includeFontPadding = "false"
                android:text="입력해주세요"
                android:textSize="24sp"
                android:layout_marginLeft="29dp"
                android:textColor="@color/darkGrayD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="23.5dp"
            android:paddingHorizontal="30dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:includeFontPadding = "false"
                android:text="name"
                android:textSize="12sp"
                android:textColor="@color/darkGrayD"
                android:letterSpacing="0.01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:includeFontPadding = "false"
                android:paddingBottom="3.5dp"
                android:paddingTop="16dp"
                android:lines="1"
                android:maxLines="1"
                android:maxLength="15"
                android:hint="ex) 윤아리"
                android:textSize="19sp"
                android:id="@+id/et_signup_nickname"
                android:textColor="@color/darkGrayD"
                android:background="@drawable/shape_bottom_line_signup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>

<!--            <RelativeLayout-->
<!--                android:background="@drawable/shape_graybtn_8dp"-->
<!--                android:layout_width="65dp"-->
<!--                android:layout_height="26dp"-->
<!--                android:id="@+id/btn_duplicate_verification"-->
<!--                android:layout_marginLeft="238dp"-->
<!--                android:layout_marginTop="6dp">-->
<!--                <TextView-->
<!--                    android:includeFontPadding = "false"-->
<!--                    android:layout_centerInParent="true"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textSize="12sp"-->
<!--                    android:textColor="@color/grayA"-->
<!--                    android:text="중복 확인"/>-->
<!--            </RelativeLayout>-->


        </LinearLayout>

        <TextView
            android:includeFontPadding = "false"
            android:layout_marginTop="60.5dp"
            android:background="@drawable/shape_btn_red"
            android:layout_gravity="center"
            android:paddingHorizontal="120dp"
            android:paddingVertical="20dp"
            android:text="다음"
            android:gravity="center"
            android:id="@+id/btn_signup_finish"
            android:textColor="@color/white"
            android:letterSpacing="0.01"
            android:layout_width="316dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</RelativeLayout>