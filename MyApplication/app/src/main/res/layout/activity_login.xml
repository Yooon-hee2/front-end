<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LoginActivity">
    <LinearLayout
        android:id="@+id/login_activity_layout"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/btn_login_back"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="11dp"
            android:src="@drawable/ic_back"
            android:layout_width="27dp"
            android:layout_height="32dp"/>

        <LinearLayout
            android:layout_marginTop="44dp"
            android:paddingHorizontal="30dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:letterSpacing="0.01"
                android:text="e-mail"
                android:textColor="@color/darkGrayD"
                android:textSize="12sp" />
            <EditText
                android:includeFontPadding = "false"
                android:paddingBottom="3.5dp"
                android:paddingTop="16dp"
                android:lines="1"
                android:maxLines="1"
                android:maxLength="20"
                android:inputType="textEmailAddress"
                android:hint="ex) yoooning@naver.com"
                android:textSize="19sp"
                android:id="@+id/et_login_email"
                android:textColor="@color/darkGrayD"
                android:background="@drawable/shape_bottom_line_signup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="23.5dp"
            android:paddingHorizontal="30dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:includeFontPadding = "false"
                android:text="password"
                android:textSize="12sp"
                android:textColor="@color/darkGrayD"
                android:letterSpacing="0.01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:includeFontPadding = "false"
                android:paddingBottom="3.5dp"
                android:paddingTop="16dp"
                android:lines="1"
                android:maxLines="1"
                android:maxLength="15"
                android:inputType="textPassword"
                android:hint="ex) abc123"
                android:textSize="19sp"
                android:id="@+id/et_login_pw"
                android:textColor="@color/darkGrayD"
                android:background="@drawable/shape_bottom_line_signup"
                android:layout_width="300dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:includeFontPadding = "false"
            android:layout_marginTop="60.5dp"
            android:background="@drawable/shape_btn_red"
            android:layout_gravity="center"
            android:paddingHorizontal="120dp"
            android:paddingVertical="20dp"
            android:text="로그인"
            android:gravity="center"
            android:id="@+id/btn_login_login"
            android:textColor="@color/white"
            android:letterSpacing="0.01"
            android:layout_width="316dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:includeFontPadding = "false"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_btn_normal"
            android:layout_gravity="center"
            android:paddingHorizontal="80dp"
            android:paddingVertical="20dp"
            android:text="이메일 회원가입"
            android:gravity="center"
            android:id="@+id/btn_login_signup"
            android:textColor="@color/darkGrayA"
            android:letterSpacing="0.01"
            android:layout_width="316dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</RelativeLayout>